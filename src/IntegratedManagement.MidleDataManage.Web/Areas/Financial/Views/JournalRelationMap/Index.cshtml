    <script>
        
        (function ($) {
            var selectAllData;
            $("#searchBtn").click(function () {
                $.search.searchClick();
            });
            $('#createJournalBtn').click(function () {
                $.search.getSelectedData();
            })
            $.search = {
                bindTable: function (data) {
                    var tbody = $("#sample_1 tbody");
                    tbody.find('tr').remove();
                    var journalList = eval(data);
                    var tr = "";
                    journalList.forEach(function (journal) {
                        tr += " <tr class='odd gradeX'><td><input type='checkbox' class='checkboxes' value='"+journal.TransId +"' /></td><td>" +
                            journal.TransId + "</td><td class='hidden-phone' name='p_transId'>" +
                            journal.bplId + "</td><td class='hidden-phone'>" +
                            journal.ERPOrderNum + "</td><td class='hidden-phone'>" +
                            journal.SourceTable + "</td><td class='hidden-phone'>" +
                            journal.WorkFlow + "</td>";
                    });
                    tbody.append(tr);
                },
                createJournal: function(data){
                    $.ajax({
                        url: "/Financial/JournalRelationMap/CreateJournal",
                        data: { JournalRelationMaps: eval(data) },
                        type: "post",
                        dataType: "json",
                        success: function (data) {
                            if (data.state == "success") {
                                alert("数据全部成功生成到财务系统");
                            } else {
                                alert(data.message);
                            }
                        }
                    });
                },
                selectAndCreateJournal: function (data) {
                    $.ajax({
                        url: "/Financial/JournalRelationMap/SelectAndCreateJournal",
                        data: { JournalRelationMaps: eval(data) },
                        type: "post",
                        dataType: "json",
                        success: function (data) {
                            if (data.state == "success") {
                                alert("数据全部成功生成到财务系统");
                            } else {
                                alert(data.message);
                            }
                        }
                    });
                },
                getSelectedData: function () {
                    var bischecked = $('#selectAllData').is(':checked');
                    if (bischecked) {
                        if (selectAllData == undefined || selectAllData == null){
                            alert("未选择数据");
                            return;
                        }
                        //同步所有数据
                        $.search.createJournal(selectAllData);
                    } else {
                        //获取勾选的数据
                        var selectedChData;
                        $(":checkbox:checked").each(function () {
                            var tablerow = $(this).parent("td").parent("tr");
                            var transId = tablerow.find("[name='p_transId']").val();
                            var sd = tablerow.find("[name='p_transId']").parent().prev().val();
                            selectedChData += transId + ',';
                        });
                        if (selectedChData == undefined || selectedChData == null) {
                            alert("未选择数据");
                            return;
                        }
                        $.search.selectAndCreateJournal(selectedChData.trimRight(","));
                        alert(selectedChData);
                    }
                },
                searchClick: function () {
                    //获取查询条件


                    $.ajax({
                        url: "/Financial/JournalRelationMap/SearchJournalRelationMapList",
                        data: { bplId: 1, "BPLName": "asdf" },
                        type: "post",
                        dataType: "json",
                        success: function (data) {
                            if (data.state == "success") {
                                selectAllData = data.data;
                                $.search.bindTable(data.data);

                            } else {
                                alert(data);
                            }
                        }
                    });
                },
            };
        })(jQuery);
